@model IEnumerable<TravelBlog.Models.Location>

@{
    ViewData["Title"] = "Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Location List</h1>
@foreach (var location in Model)
{
    <h3>@Html.DisplayFor(modelLocation => location.Name)</h3>
    <p>@Html.DisplayFor(modelLocation => location.Description)</p>
    <p>@Html.ActionLink("View Experiences", "Index", "Experience", new { id = location.Id }) |
	   @Html.ActionLink("Add Experience", "AddExperience", new { id = location.Id}) |	   
	   @Html.ActionLink("Edit", "Edit", new { id = location.Id }) |
       @Html.ActionLink("Delete", "Delete", new { id = location.Id })</p>
}

<p>@Html.ActionLink("Create New", "Create")</p>